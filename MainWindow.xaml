<Window x:Class="PCDiagnosticPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PCDiagnosticPro.ViewModels"
        xmlns:conv="clr-namespace:PCDiagnosticPro.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="PC Diagnostic Pro" 
        Height="800" Width="1100"
        MinHeight="700" MinWidth="900"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <conv:StatusToColorConverter x:Key="StatusToColor"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:GradeToColorConverter x:Key="GradeToColor"/>
        <conv:InverseBoolConverter x:Key="InverseBool"/>
        <conv:ProgressToBlurConverter x:Key="ProgressToBlur"/>
        <conv:ProgressToOpacityConverter x:Key="ProgressToOpacity"/>
        <conv:ProgressToArcConverter x:Key="ProgressToArc"/>
        <sys:Double x:Key="CompactPanelHeight">140</sys:Double>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- BARRE LATERALE GAUCHE -->
        <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel VerticalAlignment="Top" Margin="0,20,0,0">
                
                <!-- Logo -->
                <Border Width="50" Height="50" CornerRadius="25" 
                        Background="{StaticResource AccentRedBrush}" Margin="0,0,0,30"
                        HorizontalAlignment="Center">
                    <TextBlock Text="âš¡" FontSize="24" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Foreground="White"/>
                </Border>

                <!-- Bouton Accueil -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavHomeTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToScannerCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScannerView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ " FontSize="20"/>
                </Button>

                <!-- Bouton Scan -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavScanTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToHealthcheckCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHealthcheckView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ”" FontSize="20"/>
                </Button>
                
                <!-- Bouton Rapports -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavReportsTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToResultsCommand}"
                        IsEnabled="{Binding HasAnyScan}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Setter Property="Opacity" Value="0.4"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsResultsView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasAnyScan}" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ“Š" FontSize="20"/>
                </Button>
                
                <!-- Bouton Parametres -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavSettingsTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToSettingsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSettingsView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="âš™ï¸" FontSize="20"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- ZONE PRINCIPALE -->
        <Grid Grid.Column="1" Margin="30">
            
            <!-- VUE HOME -->
            <Grid Visibility="{Binding IsScannerView, Converter={StaticResource BoolToVisibility}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,40" HorizontalAlignment="Center">
                    <Grid>
                        <TextBlock Text="{Binding HomeTitle}" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="{Binding HomeTitle}" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource AccentRed}" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                    <TextBlock Text="{Binding HomeSubtitle}" FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>

                <UniformGrid Grid.Row="1" Columns="2">
                    <!-- Carte Scan -->
                    <Border Margin="15" Cursor="Hand" Style="{StaticResource CardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToHealthcheckCommand}"/>
                        </Border.InputBindings>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                            <TextBlock Text="âš¡" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding HomeScanTitle}" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding HomeScanAction}" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentRedBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding HomeScanDescription}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Carte Chat -->
                    <Border Margin="15" Cursor="Hand" Style="{StaticResource CardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToChatCommand}"/>
                        </Border.InputBindings>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                            <TextBlock Text="ðŸ¤–" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding HomeChatTitle}" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding HomeChatAction}" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentRedBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding HomeChatDescription}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>

            <!-- VUE HEALTHCHECK -->
            <Grid Visibility="{Binding IsHealthcheckView, Converter={StaticResource BoolToVisibility}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource PanelBorder}" Margin="0,0,0,20"
                            Height="{StaticResource CompactPanelHeight}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="12"
                                       Foreground="{StaticResource AccentRedBrush}" Margin="0,0,0,8">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="ðŸ“¡ {0}">
                                        <Binding Path="LiveFeedLabel"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <ListBox Grid.Row="1" ItemsSource="{Binding LiveFeedItems}"
                                     Background="Transparent" BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas" FontSize="10">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Setter Property="Padding" Value="0,1"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- Bouton central -->
                    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
                        <Grid HorizontalAlignment="Center">
                            <Ellipse Width="260" Height="260" 
                                     Stroke="{StaticResource BackgroundLightBrush}" 
                                     StrokeThickness="8"/>

                            <Path Width="260" Height="260"
                                  StrokeThickness="12"
                                  StrokeDashArray="2 6"
                                  StrokeDashCap="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Data="{Binding Progress, Converter={StaticResource ProgressToArc}, ConverterParameter=130}"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                  Opacity="{Binding Progress, Converter={StaticResource ProgressToOpacity}}">
                                <Path.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="0"/>
                                        <GradientStop Color="#FFFF8B94" Offset="0.5"/>
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Path.Stroke>
                                <Path.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentRed}"
                                                      BlurRadius="{Binding Progress, Converter={StaticResource ProgressToBlur}}"
                                                      ShadowDepth="0"
                                                      Opacity="0.8"/>
                                </Path.Effect>
                                <Path.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="StrokeDashOffset"
                                                                 From="0" To="-20" Duration="0:0:1.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Path.Triggers>
                            </Path>

                            <Path Width="260" Height="260"
                                  Stroke="{StaticResource AccentRedBrush}"
                                  StrokeThickness="8"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Data="{Binding Progress, Converter={StaticResource ProgressToArc}, ConverterParameter=130}"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <Ellipse Width="260" Height="260" StrokeThickness="3"
                                     Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.RenderTransform>
                                    <RotateTransform/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                               From="0" To="360" Duration="0:0:1.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>

                            <Grid Width="220" Height="220" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Command="{Binding StartScanCommand}"
                                        IsEnabled="{Binding CanStartScan}"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Ellipse x:Name="ButtonBackground">
                                                    <Ellipse.Fill>
                                                        <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                            <GradientStop Color="#FF2D333B" Offset="0"/>
                                                            <GradientStop Color="#FF161B22" Offset="1"/>
                                                        </RadialGradientBrush>
                                                    </Ellipse.Fill>
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="{StaticResource AccentRed}" 
                                                                          BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                                
                                                <Ellipse Stroke="{StaticResource AccentRedBrush}" 
                                                         StrokeThickness="2" Margin="10"/>
                                            </Grid>
                                            
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonBackground" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="{StaticResource AccentRed}" 
                                                                          BlurRadius="50" ShadowDepth="0" Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <StackPanel Visibility="{Binding IsIdle, Converter={StaticResource BoolToVisibility}}"
                                                IsHitTestVisible="False">
                                        <TextBlock Text="{Binding ScanButtonText}" FontSize="22" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding ScanButtonSubtext}" FontSize="10"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Progress, StringFormat={}{0}%}" 
                                                   FontSize="42" FontWeight="Bold"
                                                   Foreground="{StaticResource AccentRedBrush}"
                                                   HorizontalAlignment="Center"
                                                   IsHitTestVisible="False"/>
                                        <TextBlock Text="{Binding CurrentStep}" 
                                                   FontSize="10" Margin="0,5,0,10"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="160" TextAlignment="Center"
                                                   IsHitTestVisible="False"/>
                                        <Button Content="{Binding CancelButtonText}" Width="60" Height="40"
                                                FontSize="12" Padding="0"
                                                Style="{StaticResource FuturisticButton}"
                                                Command="{Binding CancelScanCommand}"
                                                ToolTip="{Binding CancelButtonText}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibility}}"
                                                HorizontalAlignment="Center"
                                                IsHitTestVisible="False">
                                        <TextBlock Text="{Binding ScoreDisplay}" 
                                                   FontSize="48" FontWeight="Bold"
                                                   Foreground="{Binding GradeDisplay, Converter={StaticResource GradeToColor}}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="/100" FontSize="14"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" Margin="0,-5,0,5"/>
                                        <Border CornerRadius="4" Padding="12,4"
                                                Background="{Binding GradeDisplay, Converter={StaticResource GradeToColor}}"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding GradeDisplay}" 
                                                       FontSize="18" FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <StackPanel Visibility="{Binding IsError, Converter={StaticResource BoolToVisibility}}"
                                                HorizontalAlignment="Center"
                                                IsHitTestVisible="False">
                                        <TextBlock Text="âŒ" FontSize="48" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Erreur" FontSize="14"
                                                   Foreground="{StaticResource AccentRedBrush}"
                                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Panneau lateral droit -->
                <Border Grid.Column="1" Background="{StaticResource BackgroundMediumBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="ðŸ“Š {0}">
                                    <Binding Path="HealthProgressTitle"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                        <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="{Binding ElapsedTimeLabel}" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding ElapsedTime}" FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource AccentRedBrush}"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="{Binding ConfigsScannedLabel}" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding ProgressCount}" FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource AccentRedBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentSectionLabel}" FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding CurrentSection}" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"
                                    Visibility="{Binding ShowScanButtons, Converter={StaticResource BoolToVisibility}}">
                            <Button Style="{StaticResource FuturisticButton}"
                                    Command="{Binding OpenReportCommand}" Margin="0,0,10,0">
                                <Button.Content>
                                    <MultiBinding StringFormat="ðŸ“„ {0}">
                                        <Binding Path="ReportButtonText"/>
                                    </MultiBinding>
                                </Button.Content>
                            </Button>
                            <Button Style="{StaticResource FuturisticButton}"
                                    Command="{Binding ExportResultsCommand}">
                                <Button.Content>
                                    <MultiBinding StringFormat="ðŸ’¾ {0}">
                                        <Binding Path="ExportButtonText"/>
                                    </MultiBinding>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- VUE CHAT -->
            <Grid Visibility="{Binding IsChatView, Converter={StaticResource BoolToVisibility}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ’¬" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="{Binding ChatTitle}" FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" 
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="{Binding ChatSubtitle}" 
                               FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- VUE RESULTATS -->
            <Grid Visibility="{Binding IsResultsView, Converter={StaticResource BoolToVisibility}}">
                
                <Grid Visibility="{Binding IsViewingHistoryList, Converter={StaticResource BoolToVisibility}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="ðŸ“Š {0}">
                                <Binding Path="ResultsHistoryTitle"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ScanHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10" Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.Column="0" Width="32" Height="32" Margin="0,0,10,0"
                                                    Content="â‹¯" FontSize="18" Padding="0"
                                                    Style="{StaticResource FuturisticButton}"
                                                    Click="OpenContextMenu"
                                                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                                <Button.ContextMenu>
                                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                                        <MenuItem Header="{Binding ArchiveMenuText}"
                                                                  Command="{Binding ArchiveScanCommand}"
                                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                        <MenuItem Header="{Binding DeleteMenuText}"
                                                                  Command="{Binding DeleteScanCommand}"
                                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                            </Button>

                                            <Border Grid.Column="1" Width="60" Height="60" CornerRadius="8"
                                                    Background="{Binding Grade, Converter={StaticResource GradeToColor}}"
                                                    Margin="0,0,15,0">
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Score}" FontSize="20" FontWeight="Bold"
                                                               Foreground="White" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Grade}" FontSize="12"
                                                               Foreground="White" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DateDisplay}" FontSize="16" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <TextBlock Text="{Binding ScoreDisplay}" FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="3" Text="â†’" FontSize="24"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"/>

                                            <Grid.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                              Command="{Binding DataContext.SelectHistoryScanCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                              CommandParameter="{Binding}"/>
                                            </Grid.InputBindings>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="{Binding ArchivesButtonText}" 
                            Style="{StaticResource FuturisticButton}"
                            Command="{Binding NavigateToArchivesCommand}"
                            HorizontalAlignment="Right" Margin="0,20,0,0"/>
                </Grid>

                <Grid Visibility="{Binding IsViewingHistoryDetail, Converter={StaticResource BoolToVisibility}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,20">
                        <Button Content="{Binding ResultsBackButton}" 
                                Style="{StaticResource FuturisticButton}"
                                Command="{Binding BackToHistoryCommand}"
                                HorizontalAlignment="Left"
                                Margin="0,0,20,0"/>
                        <StackPanel>
                            <TextBlock FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="ðŸ“Š {0}">
                                        <Binding Path="ResultsDetailTitle"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="{Binding SelectedScanDateDisplay}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </DockPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ScanResult.Summary.Score}" FontSize="48" FontWeight="Bold"
                                               Foreground="{Binding ScanResult.Summary.Grade, Converter={StaticResource GradeToColor}}"/>
                                    <TextBlock Text="/100" FontSize="24" VerticalAlignment="Bottom" Margin="5,0,20,10"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Border CornerRadius="8" Padding="20,10"
                                            Background="{Binding ScanResult.Summary.Grade, Converter={StaticResource GradeToColor}}"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ScanResult.Summary.Grade}" FontSize="24" FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="{Binding ResultsDetailsHeader}" FontWeight="Bold" FontSize="16"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                            
                            <DataGrid ItemsSource="{Binding ScanItems}"
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      CanUserAddRows="False" CanUserDeleteRows="False"
                                      GridLinesVisibility="None" HeadersVisibility="Column"
                                      MaxHeight="400">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{Binding DataContext.ResultsCategoryHeader, RelativeSource={RelativeSource AncestorType=Window}}" Binding="{Binding Category}" Width="120"/>
                                    <DataGridTextColumn Header="{Binding DataContext.ResultsItemHeader, RelativeSource={RelativeSource AncestorType=Window}}" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTemplateColumn Header="{Binding DataContext.ResultsLevelHeader, RelativeSource={RelativeSource AncestorType=Window}}" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="4" Padding="6,3" HorizontalAlignment="Left"
                                                        Background="{Binding Severity, Converter={StaticResource StatusToColor}}">
                                                    <TextBlock Text="{Binding SeverityText}" FontWeight="SemiBold"
                                                               Foreground="White" FontSize="10"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="{Binding DataContext.ResultsDetailHeader, RelativeSource={RelativeSource AncestorType=Window}}" Binding="{Binding Detail}" Width="*"/>
                                    <DataGridTextColumn Header="{Binding DataContext.ResultsRecommendationHeader, RelativeSource={RelativeSource AncestorType=Window}}" Binding="{Binding Recommendation}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Border Style="{StaticResource PanelBorder}" Margin="0,20,0,0">
                                <StackPanel>
                                    <TextBlock Text="{Binding ScoreLegendTitle}" FontWeight="Bold" FontSize="16"
                                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                                    <TextBlock Text="{Binding ScoreRulesTitle}" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentRedBrush}" Margin="0,0,0,6"/>
                                    <StackPanel Margin="10,0,0,10">
                                        <TextBlock Text="{Binding ScoreRuleInitial}"/>
                                        <TextBlock Text="{Binding ScoreRuleCritical}"/>
                                        <TextBlock Text="{Binding ScoreRuleError}"/>
                                        <TextBlock Text="{Binding ScoreRuleWarning}"/>
                                        <TextBlock Text="{Binding ScoreRuleMin}"/>
                                        <TextBlock Text="{Binding ScoreRuleMax}"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding ScoreGradesTitle}" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentRedBrush}" Margin="0,0,0,6"/>
                                    <StackPanel Margin="10,0,0,0">
                                        <TextBlock Text="{Binding ScoreGradeA}"/>
                                        <TextBlock Text="{Binding ScoreGradeB}"/>
                                        <TextBlock Text="{Binding ScoreGradeC}"/>
                                        <TextBlock Text="{Binding ScoreGradeD}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2" Height="1" Background="Transparent"/>
                </Grid>

                <Grid Visibility="{Binding IsViewingArchives, Converter={StaticResource BoolToVisibility}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,20">
                        <Button Content="{Binding ResultsBackButton}" 
                                Style="{StaticResource FuturisticButton}"
                                Command="{Binding BackToHistoryCommand}"
                                HorizontalAlignment="Left"
                                Margin="0,0,20,0"/>
                        <TextBlock FontSize="24" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="ðŸ“¦ {0}">
                                    <Binding Path="ArchivesTitle"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DockPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ArchivedScanHistoryView.Groups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10" Cursor="Hand">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="{Binding DayDisplay}" FontSize="20"
                                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                                       VerticalAlignment="Center" Margin="0,0,15,0"
                                                                       IsHitTestVisible="False"/>

                                                            <Border Grid.Column="1" Width="60" Height="60" CornerRadius="8"
                                                                    Background="{Binding Grade, Converter={StaticResource GradeToColor}}"
                                                                    Margin="0,0,15,0">
                                                                <StackPanel VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding Score}" FontSize="20" FontWeight="Bold"
                                                                               Foreground="White" HorizontalAlignment="Center"/>
                                                                    <TextBlock Text="{Binding Grade}" FontSize="12"
                                                                               Foreground="White" HorizontalAlignment="Center"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding DateDisplay}" FontSize="16" FontWeight="SemiBold"
                                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                                <TextBlock Text="{Binding ScoreDisplay}" FontSize="12"
                                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                                            </StackPanel>

                                                            <TextBlock Grid.Column="3" Text="â†’" FontSize="24"
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       VerticalAlignment="Center"/>

                                                            <Grid.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick" 
                                                                              Command="{Binding DataContext.SelectHistoryScanCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding}"/>
                                                            </Grid.InputBindings>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <!-- VUE PARAMETRES -->
            <Grid Visibility="{Binding IsSettingsView, Converter={StaticResource BoolToVisibility}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,30">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="âš™ï¸ {0}">
                            <Binding Path="SettingsTitle"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <StackPanel Grid.Row="1">
                    <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,20"
                            Height="{StaticResource CompactPanelHeight}">
                        <StackPanel>
                            <TextBlock Text="{Binding ReportsDirectoryTitle}" FontWeight="Bold" FontSize="16"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding ReportsDirectoryDescription}"
                                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" Text="{Binding ReportDirectory, Mode=TwoWay}"
                                         IsReadOnly="True" Margin="0,0,10,0"/>
                                
                                <Button Grid.Column="1" Content="{Binding BrowseButtonText}"
                                        Style="{StaticResource FuturisticButton}"
                                        Command="{Binding BrowseReportDirectoryCommand}"
                                        Padding="20,10"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource PanelBorder}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{Binding LanguageTitle}" FontWeight="Bold" FontSize="16"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding LanguageDescription}"
                                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,15"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding LanguageLabel}" Foreground="Black"
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                          SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                                          DisplayMemberPath="DisplayName"
                                          Width="200"
                                          Foreground="Black"
                                          Background="White">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFE5E7EB"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFD1D5DB"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Opacity" Value="0.7"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource PanelBorder}">
                        <StackPanel>
                            <TextBlock Text="{Binding AdminRightsTitle}" FontWeight="Bold" FontSize="16"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="{Binding AdminStatusLabel}" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Border CornerRadius="4" Padding="8,4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#FF4A1515"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAdmin}" Value="True">
                                                    <Setter Property="Background" Value="#FF1E4620"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontWeight="SemiBold"
                                               Text="{Binding AdminStatusText}"
                                               Foreground="{Binding AdminStatusForeground}"/>
                                </Border>
                            </StackPanel>
                            
                            <Button Content="{Binding RestartAdminButtonText}" 
                                    Style="{StaticResource FuturisticButton}"
                                    Command="{Binding RestartAsAdminCommand}"
                                    HorizontalAlignment="Left"
                                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}"/>
                        </StackPanel>
                    </Border>

                    <Button Content="{Binding SaveSettingsButtonText}" 
                            Style="{StaticResource FuturisticButton}"
                            Command="{Binding SaveSettingsCommand}"
                            IsEnabled="{Binding IsSettingsDirty}"
                            HorizontalAlignment="Right"
                            Margin="0,30,0,0"
                            Padding="30,12"
                            FontSize="16"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Grid>
</Window>
